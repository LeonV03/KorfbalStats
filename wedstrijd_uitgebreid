<body>
  <h1>Wedstrijdregistratie - Uitgebreid</h1>

  <div class="controls">
    <label>Actie:</label>
    <select id="actieSelect">
      <option value="schot">Schotpoging</option>
      <option value="doelpunt">Doelpunt</option>
      <option value="balverlies">Balverlies</option>
    </select>
  </div>

  <div class="veld-container" id="veld">
    <!-- Zones op het veld -->
    <div class="zone" data-zone="linksboven" style="top: 20px; left: 20px; width: 150px; height: 150px;"></div>
    <div class="zone" data-zone="rechtsboven" style="top: 20px; right: 20px; width: 150px; height: 150px;"></div>
    <div class="zone" data-zone="linksonder" style="bottom: 20px; left: 20px; width: 150px; height: 150px;"></div>
    <div class="zone" data-zone="rechtsonder" style="bottom: 20px; right: 20px; width: 150px; height: 150px;"></div>
    <div class="zone" data-zone="midden" style="top: 125px; left: 225px; width: 150px; height: 150px;"></div>
  </div>

  <div id="log"><strong>Actielog:</strong><br /></div>

  <script>
    const zones = document.querySelectorAll('.zone');
    const log = document.getElementById('log');
    const actieSelect = document.getElementById('actieSelect');

    zones.forEach(zone => {
      zone.addEventListener('click', () => {
        const actie = actieSelect.value;
        const locatie = zone.getAttribute('data-zone');
        const tijd = new Date().toLocaleTimeString();
        const bericht = tijd + " - " + actie + " vanuit " + locatie;
        const p = document.createElement('div');
        p.textContent = bericht;
        log.appendChild(p);
        log.scrollTop = log.scrollHeight;
      });
    });
  </script>
</body>
