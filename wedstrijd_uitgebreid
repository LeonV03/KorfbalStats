<body>
  <h1>Wedstrijd Uitgebreid</h1>
  <div class="veld">
    <div class="zone" data-zone="linksboven">↖</div>
    <div class="zone" data-zone="middenboven">↑</div>
    <div class="zone" data-zone="rechtsboven">↗</div>
    <div class="zone" data-zone="middenlinks">←</div>
    <div class="zone" data-zone="midden">●</div>
    <div class="zone" data-zone="middenrechts">→</div>
    <div class="zone" data-zone="linksonder">↙</div>
    <div class="zone" data-zone="middenonder">↓</div>
    <div class="zone" data-zone="rechtsonder">↘</div>
  </div>

  <div class="controls">
    <button onclick="registreerActie('schot')">Schotpoging</button>
    <button onclick="registreerActie('doelpunt')">Doelpunt</button>
    <button onclick="registreerActie('balverlies')">Balverlies</button>
  </div>

  <div class="log">
    <h3>Actielog</h3>
    <ul id="actieLog"></ul>
  </div>

  <script>
    let geselecteerdeZone = null;
    const zones = document.querySelectorAll('.zone');
    zones.forEach(zone => {
      zone.addEventListener('click', () => {
        zones.forEach(z => z.style.backgroundColor = '#e0e0e0');
        zone.style.backgroundColor = '#a0c4ff';
        geselecteerdeZone = zone.dataset.zone;
      });
    });

    function registreerActie(type) {
      if (!geselecteerdeZone) {
        alert("Selecteer eerst een zone op het veld.");
        return;
      }
      const log = document.getElementById("actieLog");
      const li = document.createElement("li");
      const tijd = new Date().toLocaleTimeString();
      li.textContent = `${tijd} - ${type} vanuit ${geselecteerdeZone}`;
      log.appendChild(li);
    }
  </script>
</body>
